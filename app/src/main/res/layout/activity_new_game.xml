<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical">

    <RelativeLayout
        android:background="#0000FF"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:id="@+id/enemyHand1"
            android:background="@drawable/backside_of_card_default"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="101dp"
            android:layout_marginEnd="101dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:id="@+id/enemyHand2"
            android:background="@drawable/backside_of_card_default"
            android:layout_gravity="right|bottom"
            android:layout_alignTop="@+id/enemyHand1"
            android:layout_toLeftOf="@+id/enemyHand1"
            android:layout_toStartOf="@+id/enemyHand1"
            android:layout_centerInParent="true" />

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="87dp"
            android:id="@+id/enemyPlaceBet"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:background="@drawable/place_bet_icon"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/enemyHand2"
            android:layout_toStartOf="@+id/enemyHand2" />

    </RelativeLayout>

    <RelativeLayout
        android:background="#00FF00"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="1">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/linearLayout2">

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/dealerAdditionalCard1"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2"
                android:visibility="visible" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/dealerAdditionalCard2"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2"
                android:visibility="visible" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/dealerAdditionalCard3"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/dealerAdditionalCard4"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout3"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="STAY"
                android:id="@+id/stay"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginLeft="46dp"
                android:layout_marginStart="46dp"
                android:enabled="true"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="DOUBLE DOWN!"
                android:id="@+id/doubleDown"
                android:enabled="false"
                android:paddingBottom="10dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"
                android:textSize="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="HIT"
                android:id="@+id/hit"
                android:enabled="true"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:paddingBottom="10dp" />
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/linearLayout3">

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/playerAdditionalCard1"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/playerAdditionalCard2"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/playerAdditionalCard3"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

            <ImageButton
                android:layout_width="52dp"
                android:layout_height="64dp"
                android:id="@+id/playerAdditionalCard4"
                android:background="@drawable/backside_of_card_default"
                android:layout_gravity="right|bottom"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/hand2"
                android:layout_toStartOf="@+id/hand2" />

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:background="#FFFFFF">

        <ImageButton
            android:layout_width="100dp"
            android:layout_height="87dp"
            android:id="@+id/placeBet"
            android:adjustViewBounds="false"
            android:cropToPadding="false"
            android:layout_gravity="bottom"
            android:scaleType="fitCenter"
            android:background="@drawable/place_bet_icon"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:id="@+id/hand1"
            android:background="@drawable/backside_of_card_default"
            android:layout_gravity="right|bottom"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/hand2"
            android:layout_toStartOf="@+id/hand2" />

        <ImageButton
            android:layout_width="90dp"
            android:layout_height="110dp"
            android:id="@+id/hand2"
            android:background="@drawable/backside_of_card_default"
            android:layout_gravity="right|bottom"
            android:layout_alignTop="@+id/hand1"
            android:layout_toLeftOf="@+id/placeBet"
            android:layout_toStartOf="@+id/placeBet" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Your Turn!"
            android:id="@+id/yourTurn"
            android:textStyle="bold"
            android:textColor="#FFFF00"
            android:visibility="visible"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

</LinearLayout>